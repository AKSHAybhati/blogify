<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card border-dark shadow rounded h-100">
              <img
                src="<%= blog.image || '/upload/avatar.png' %>"
                class="card-img-top"
                style="object-fit: cover; height: 180px"
                alt="Blog Image"
              />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.para %></p>
                <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">View Blog</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
